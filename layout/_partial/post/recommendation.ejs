<% if (post.prev || post.next) { %>
    <div class="post-rmds main-content-wrap">
        <h4>猜你想读</h4>
        <ul>
            <% if (post.prev) { %>
                <li><a href="<%= post.prev.permalink %>"><%= post.prev.title %></a></li>
            <% } %>
            <% if (post.next) { %>
                <li><a href="<%= post.next.permalink %>"><%= post.next.title %></a></li>
            <% } %>
        </ul>
        
    </div>
<% } %>